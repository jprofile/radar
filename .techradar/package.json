{
  "name": "aoe_technology_radar",
  "version": "4.6.1",
  "bin": {
    "techradar": "bin/techradar.js"
  },
  "scripts": {
    "clean": "rm -rf out .next",
    "dev": "next dev",
    "build:icons": "npx @svgr/cli --typescript --no-dimensions --no-prettier --out-dir src/components/Icons -- src/icons",
    "build:data": "tsx scripts/buildData.ts",
    "build": "npm run clean && npm run build:data && next build",
    "start": "next start",
    "lint": "next lint",
    "fix": "prettier . --write",
    "prepare": "husky",
    "postinstall": "npm run build:icons"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/formidable": "^3.4.5",
    "@types/node": "^22.15.17",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "eslint": "^9.23.0",
    "eslint-config-next": "15.2.4",
    "fuse.js": "^7.1.0",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "marked": "^15.0.7",
    "marked-highlight": "^2.2.1",
    "next": "15.2.4",
    "postcss": "^8.5.3",
    "postcss-nested": "^7.0.2",
    "postcss-preset-env": "^10.1.5",
    "prettier": "^3.5.3",
    "react": "^19",
    "react-dom": "^19",
    "tailwindcss": "^4.1.7",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "csv-parse": "^5.6.0",
    "dayjs": "^1.11.13",
    "formidable": "^3.5.4",
    "simple-git": "^3.27.0"
  }
}
